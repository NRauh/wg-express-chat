  <body>
<div class="container">

  <h1>Webgeeks Chat</h1>
  <p class="lead">Say hi, yo.</p>

  <div class="row">
    <div class="chat col-lg-8">
      <h4>Chat Channel</h4>
      <div class="row">
        <div class="chat-messages col-lg-10 col-offset-2">
          <ul id="chat">
          </ul>
        </div>
      </div>
      <div class="row">
        <div class="chat-send col-lg-10 col-offset-2">
        <form action="#" method="post" id="sendmessage">
          <input type="text" name="message" id="message" value="" class="col-lg-10">
          <button type="submit" class="btn col-lg-2 btn-success ">Send</button>
        </form>
        </div>
      </div>
    </div>
    <div class="presence col-lg-4">
      <h4>Who's here?</h4>
      <ul id="online">
      </ul>
    </div>
  </div>

</div> <!-- /container -->


